{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Login",
  "description": "Grants the user access to the system",
  "type": "object",
  "properties": {
    "username": {
      "description": "The users username",
      "type": "string"
    },
    "password": {
      "description": "The users password",
      "type": "string"
    }
  },
  "required": [
    "username",
    "password"
  ]
}
